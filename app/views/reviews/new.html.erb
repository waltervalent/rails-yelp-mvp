<h1>New Review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <p>Rating (0..5)<p>
  <%= f.number_field :rating, max: 5, min: 0 %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
<%= link_to "Back", restaurant_path(@restaurant), class: "btn btn-success" %>
